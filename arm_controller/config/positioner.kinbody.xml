<KinBody name ="arm_gripper_5dof">
    <!-- Attachment -->
    <Body name="arm_0_top" type="dynamic">
        <Geom type="trimesh">
            <render>../model/positioner/bar0.stl</render>
            <diffuseColor>0.8 0.0 0.0</diffuseColor>
        </Geom>
    </Body>
    
    <!-- Joint 0 -->
    <Body name="arm_0_bottom" type="dynamic">
        <offsetfrom>arm_0_top</offsetfrom>
        <Geom type="trimesh">
            <render>../model/positioner/bar1.stl</render>
            <diffuseColor>0.8 0.0 0.0</diffuseColor>
        </Geom>
    </Body>
    <joint name="arm_0_joint" type="hinge">
        <offsetfrom>arm_0_bottom</offsetfrom>
        <Translation>0 0.0 0.01</Translation>
        <body>arm_0_top</body>
        <body>arm_0_bottom</body>
        <limitsdeg>-110 110</limitsdeg>
        <initial>0</initial>
        <Axis>0 0 1</Axis>
    </joint>

    <!-- Joint 1 -->
    <Body name="arm_1" type="dynamic">
        <offsetfrom>arm_0_bottom</offsetfrom>
        <Translation>0 0.0 0.07</Translation>
        <rotationaxis>1 0 0 0</rotationaxis>
        <rotationaxis>0 1 0 90</rotationaxis>
        <rotationaxis>0 0 1 -90</rotationaxis>
        <Geom type="trimesh">
            <render>../model/positioner/bar2.stl</render>
            <diffuseColor>0.5 0.0 0.0</diffuseColor>
        </Geom>
    </Body>
    <joint name="arm_1_joint" type="hinge">
        <offsetfrom>arm_1</offsetfrom>
        <body>arm_0_bottom</body>
        <body>arm_1</body>
        <limitsdeg>-110 110</limitsdeg>
        <Axis>0 0 1</Axis>
    </joint>

    <!-- Joint 2 -->
    <Body name="arm_2" type="dynamic">
        <offsetfrom>arm_1</offsetfrom>
        <Translation>-0.105 0 -0.02</Translation>
        <Geom type="trimesh">
            <render>../model/positioner/bar3.stl</render>
            <diffuseColor>0.8 0.0 0.0</diffuseColor>
        </Geom>
    </Body>
    <joint name="arm_2_joint" type="hinge">
        <offsetfrom>arm_2</offsetfrom>
        <body>arm_1</body>
        <body>arm_2</body>
        <Axis>0 0 1</Axis>
        <limitsdeg>-110 110</limitsdeg>
    </joint>

    <!-- Joint 3 wirst-->
    <Body name="effector_connector" type="dynamic">
        <offsetfrom>arm_2</offsetfrom>
        <rotationaxis>0 1 0 0</rotationaxis>
        <rotationaxis>0 0 1 180</rotationaxis>
        <Translation>-0.155 0 0.02 </Translation>
        <Geom type="trimesh">
            <render>../model/positioner/bar4.stl</render>
            <diffuseColor>0.8 0.0 0.0</diffuseColor>
        </Geom>
    </Body>
    <joint name="effector_connector_joint" type="hinge">
        <offsetfrom>effector_connector</offsetfrom>
        <body>arm_2</body>
        <body>effector_connector</body>
        <Axis>0 0 1</Axis>
        <limitsdeg>-110 110</limitsdeg>
    </joint>

    <!--GRIPPER-->
    <!--end_effector-->
    <Body name="end_effector" type="dynamic">
        <offsetfrom>effector_connector</offsetfrom>
        <Translation>0.07 0 0.0 </Translation>
        <rotationaxis>1 0 0 -90</rotationaxis>
        <Geom type="trimesh">
            <render>../model/positioner/bar5.stl</render>
            <diffuseColor>0.8 0.0 0.0</diffuseColor>
        </Geom>
    </Body>
    <joint name="wirst_1_joint" type="hinge" enable="False">
        <offsetfrom>wirst_1</offsetfrom>
        <body>effector_connector</body>
        <body>end_effector</body>
        <limitsdeg>0 0</limitsdeg>
    </joint>
</KinBody>
